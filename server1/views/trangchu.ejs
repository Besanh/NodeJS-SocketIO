<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>NodeJS + Socket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="jquery.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script>
        var socket = io("http://localhost:4000");
        // Client listen server send data
        socket.on("Server-send-color", function(data){
            $("body").attr("bgColor", data);    // change color
        });

        $(document).ready(function(){
            $("#do").click(function(){
                socket.emit("Client-send-color", "red");
            });
            $("#xanh").click(function(){
                socket.emit("Client-send-color", "green");
            });
            $("#vang").click(function(){
                socket.emit("Client-send-color", "yellow");
            });
        });
    </script>
    <style>
        #do, #xanh, #vang
        {
            width: 300px;
            height: 70px;
        }

        #do
        {
            background-color: red;
        }

        #xanh
        {
            background-color: green;
        }

        #vang
        {
            background-color: yellow;
        }
    </style>
</head>
<body bgColor="pink">
    <div id="do">Đỏ</div>
    <div id="xanh">Xanh</div>
    <div id="vang">Vang</div>
</body>
</html>